<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>

    {{ SUPPORT }}

    <style type="text/css">
        {% include "style.css" %}
    </style>
</head>
<body>


    <script>
        {% include "d3.v3.js" %}
        {% include "d3graphscript.js" %}

        graph = {{ json_data }}

        window.addEventListener('DOMContentLoaded', function () {
            d3graphscript({
                width: {{ width }},
                height: {{ height }},
                charge: {{ charge }},
                distance: {{ edge_distance }},
                directed: {{ directed | lower }},
                collision: {{ collision }}
            })
        });
    </script>


<!-- SLIDER -->
{{ slider_comment_start }}

    {% if max_slider > min_slider %}
	<div style="max-width:{{ width }}px;">
        <form>
            <h3>
                Edge Threshold
                {{ min_slider }}
                <input type="range" autocomplete="off" id="thresholdSlider" value="{{ min_slider }}" min="{{ min_slider }}" max="{{ max_slider }}">
                {{ max_slider }}
            </h3>
        </form>
	</div>
    {% endif %}

{{ slider_comment_stop }}

</body>
</html>

